# Description: torrent library
# URL: https://rakshasa.github.io/rtorrent
# Maintainer: duskmourn
# Depends on: libsigc++ curl

name=libtorrent
version=0.13.8
release=1
source=(https://github.com/rakshasa/rtorrent/releases/download/v0.9.8/libtorrent-$version.tar.gz)

build() {
  cd $name-$version

  ./autogen.sh

  ./configure --prefix=/usr \
    --enable-debug=no
  make
  make install DESTDIR=$PKG
}
