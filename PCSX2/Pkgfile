# Description: Playstation 2 Emulator
# Maintainer: duskmourn
# URL: https://pcsx2.net/
# Depends on: wxgtk3 cmake git soundtouch

name=PCSX2
version=1.6.0
release=1
source=(https://github.com/PCSX2/pcsx2/archive/refs/tags/v$version.tar.gz)

build() {
	cd pcsx2-$version
	mkdir build && cd build
	cmake -DCMAKE_TOOLCHAIN_FILE=cmake/linux-compiler-i386-multilib.cmake -DCMAKE_BUILD_TYPE=Release -DBUILD_REPLAY_LOADERS=TRUE -DCMAKE_BUILD_PO=FALSE -DDISABLE_SETCAP=ON -USE_VULKAN=ON  ..
	make
	make DESTDIR=$PKG install
}
